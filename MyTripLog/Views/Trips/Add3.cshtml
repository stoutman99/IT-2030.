@model TripViewModel

@{
    ViewBag.Title = "Add Trip - Page 2";
    ViewBag.SubHeader = $"Add info for {Model.Trip.Accomodations}";
}


<form asp-action="Add">
    <input type="hidden" asp-for="PageNumber" />

    <div class="form-group">
        <input asp-for="Trip.Todo" class="form-control" />
    </div>
    <div class="form-group">
        <input asp-for="Trip.ToDo2" class="form-control" />
    </div>
    <div class="form-group">
        <input asp-for="Trip.ToDo3" class="form-control" />
    </div>
    <div>
        <button type="submit" class="btn btn-dark">Save</button>
        <a asp-action="Cancel" class="btn btn-outlin-dark">Cancel</a>
    </div>
</form>