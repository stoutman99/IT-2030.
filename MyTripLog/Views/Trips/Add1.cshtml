@model Trip

@{ 
    string title = ViewBag.Action + " Trip";
    ViewBag.Title = title;
}

<h2>@ViewBag.Title</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Destination">Destination</label>
        <input asp-for="Destination" />
    </div>
    <div class="form-group">
        <label asp-for="Start">Start Date</label>
        <input asp-for="Start" />
    </div>
    <div class="form-group">
        <label asp-for="End">End Date</label>
        <input asp-for="End" />
    </div>
    <div class="form-group">
        <label asp-for="Accomodations">Accomodations</label>
        <input asp-for="Accomodations" />
    </div>
    <div class="form-group">
        <label asp-for="Todo">Things to do</label>
        <input asp-for="Todo" />
    </div>
</form>



