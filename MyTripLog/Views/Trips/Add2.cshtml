@model TripViewModel

@{
    ViewBag.Title = "Add Trip - Page 2";
    ViewBag.SubHeader = $"Add info for {Model.Trip.Accomodations}";
}


<form asp-action="Add">
    <input type="hidden" asp-for="PageNumber" />

    <div class="form-group">
        <label asp-for="Trip.AccomodationPhone">Phone Number</label>
        <input asp-for="Trip.AccomodationPhone" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Trip.AccomodationEmail">Email Address</label>
        <input asp-for="Trip.AccomodationEmail" class="form-control" />
    </div>
    <div>
        <button type="submit" class="btn btn-dark">Next</button>
        <a asp-action="Cancel" class="btn btn-outlin-dark">Cancel</a>
    </div>
</form>
